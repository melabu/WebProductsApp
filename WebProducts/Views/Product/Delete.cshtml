@model WebProducts.Models.Product
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h2>Product Delete</h2>
    <p>Are you sure you want to delete this Product?</p>

    @using (Html.BeginForm("Delete", "Product", FormMethod.Post))
    {
        <fieldset>
            <legend>Product Detail</legend>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Category)
            </div>
            <div class="display-label">
                @Html.DisplayFor(model => model.Category)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.ProductName)
            </div>
            <div class="display-text">
                @Html.DisplayFor(model => model.ProductName)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Description)
            </div>
            <div class="display-label">
                @Html.DisplayFor(model => model.Description)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.AvailableDate)
            </div>
            <div class="display-text">
                @Html.DisplayFor(model => model.AvailableDate)
            </div>
        </fieldset>
        <p>
            <input type="submit" value="Delete" />
        </p>
    }
    <p>
        @Html.ActionLink("Back to List", "Index", "Product")
    </p>
</body>
</html>
